{% extends 'base.html.twig' %}

{% block title %}ShiftType index{% endblock %}

{% block body %}
    <h1>ShiftType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shift_name</th>
                <th>Default_start</th>
                <th>Default_end</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shift_type in shift_types %}
            <tr>
                <td>{{ shift_type.id }}</td>
                <td>{{ shift_type.shiftName }}</td>
                <td>{{ shift_type.defaultStart ? shift_type.defaultStart|date('H:i:s') : '' }}</td>
                <td>{{ shift_type.defaultEnd ? shift_type.defaultEnd|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_shift_type_show', {'id': shift_type.id}) }}">show</a>
                    <a href="{{ path('app_shift_type_edit', {'id': shift_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shift_type_new') }}">Create new</a>
{% endblock %}
