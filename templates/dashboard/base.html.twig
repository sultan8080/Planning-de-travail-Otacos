{% extends 'base.html.twig' %}

{% block body %}
	<div class="bg-black row px-4">
		<div class="col-2 text-primary">
			<a
				class="navbar-brand" href="#">
				{# <img src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="HELLO" width="30" height="24"> #}
				OTACOS
			</a>
		</div>
		<div
			class="col-10 d-flex justify-content-end justify-content-lg-between">
			<!-- Toggle button for desktop -->
			<button class="btn btn-link btn-sm text-white d-none d-lg-inline ms-3" id="sidebarToggle">
				<i class="bi bi-list fs-2 fs-lg-1"></i>
			</button>

			<!-- Toggle button for mobile/tablet -->
			<button class="btn btn-link btn-sm text-white d-lg-none ms-3" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
