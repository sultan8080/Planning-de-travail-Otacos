{% extends 'base.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <h1>Planning index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Week_number</th>
                <th>Year</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.weekNumber }}</td>
                <td>{{ planning.year }}</td>
                <td>{{ planning.startDate ? planning.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.endDate ? planning.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.createdAt ? planning.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ planning.updatedAt ? planning.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_planning_show', {'id': planning.id}) }}">show</a>
                    <a href="{{ path('app_planning_edit', {'id': planning.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_planning_new') }}">Create new</a>
{% endblock %}
