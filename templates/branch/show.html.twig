{% extends 'base.html.twig' %}

{% block title %}Branch{% endblock %}

{% block body %}
    <h1>Branch</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ branch.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ branch.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ branch.address }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ branch.createdAt ? branch.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ branch.updatedAt ? branch.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_branch_index') }}">back to list</a>

    <a href="{{ path('app_branch_edit', {'id': branch.id}) }}">edit</a>

    {{ include('branch/_delete_form.html.twig') }}
{% endblock %}
