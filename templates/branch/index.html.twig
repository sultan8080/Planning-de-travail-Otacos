{% extends 'base.html.twig' %}

{% block title %}Branch index{% endblock %}

{% block body %}
    <h1>Branch index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for branch in branches %}
            <tr>
                <td>{{ branch.id }}</td>
                <td>{{ branch.name }}</td>
                <td>{{ branch.address }}</td>
                <td>{{ branch.createdAt ? branch.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ branch.updatedAt ? branch.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_branch_show', {'id': branch.id}) }}">show</a>
                    <a href="{{ path('app_branch_edit', {'id': branch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_branch_new') }}">Create new</a>
{% endblock %}
